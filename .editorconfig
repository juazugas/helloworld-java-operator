; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[src/{main,test}/java/**.java]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{Makefile,.gitmodules}]
indent_style = tab
indent_size = 2

[*.md]
indent_size = 2
trim_trailing_whitespace = false
eclint_indent_style = unset

[Dockerfile]
indent_size = 4
